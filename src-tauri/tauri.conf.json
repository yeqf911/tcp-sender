{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Packet Forge",
  "version": "1.5.0",
  "identifier": "com.nicole.packetforge",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Packet Forge",
        "width": 1600,
        "height": 1000,
        "backgroundColor": "#1e1e1e",
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
